<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AssignmentActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddAss"
        android:text="Add Ass"/>
    <FrameLayout
        android:id="@+id/TopicFragContainer"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/llAddAss"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/etAssName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Assignment Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAddPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Pdf" />

        <Button
            android:id="@+id/btnAddTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add TOpic" />


        <Button
            android:id="@+id/btnAssDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>